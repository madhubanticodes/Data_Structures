#include <iostream>
using namespace std;

void max_heapify(int *arr, int i, int n)
{
    int temp,j;
    temp = arr[i];
    j = 2 * i;
    while (j <= n)
    {
        if (j < n && arr[j+1] > arr[j])
            j = j + 1;
        if (temp > arr[j])
            break;
        else if (temp <= arr[j])
        {
            arr[j / 2] = arr[j];
            j = 2 * j;
        }
    }
    arr[j/2] = temp;
}
void build_maxheap(int *arr,int n)
{
    int i;
    for(i = n/2; i >= 1; i--)
    {
        max_heapify(arr,i,n);
    }
}
int main()
{
    int arr[50];
    int i,n;
    cout<<"Enter number of elements in the array:\n";
    cin>>n;
    for (i = 1; i <= n; i++)
    {
        cout<<"Enter the element "<<(i)<<" :\n";
        cin>>arr[i];
    }
    build_maxheap(arr,n);
    cout<<"Max Heap:\n";
    for (i = 1; i <= n; i++)
    {
        cout<<arr[i]<<endl;
    }
}
